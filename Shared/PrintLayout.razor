@inherits LayoutComponentBase

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Blazing Pizza - @PageTitle</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .print-header {
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .print-footer {
            border-top: 1px solid #ccc;
            padding-top: 10px;
            margin-top: 20px;
            font-size: 12px;
            color: #666;
        }

        @@media print
        {
            body {
                margin: 0;
            }

                .no-print {
                    display: none;
                }
            }
        </style>
    </head>

    <body>
        <div class="print-header">
            <h1>üçï Blazing Pizza</h1>
            <p>Delicious pizzas delivered fast!</p>
        </div>

        <div class="print-content">
            @Body
        </div>

        <div class="print-footer">
            <p>Printed on: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</p>
            <p>¬© Blazing Pizzas 2024 - All rights reserved</p>
            <p>Developed by Jaydan Valencia - United States</p>
        </div>
    </body>

    </html>

@code {
    [Parameter]
    public string PageTitle { get; set; } = "Document";
}
